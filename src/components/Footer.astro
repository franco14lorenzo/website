---
import EnhancedCTA from './EnhancedCTA.astro'
const currentYear = new Date().getFullYear()
---

<footer class="mt-auto relative w-full bg-gradient-to-br from-neutral-50/80 to-primary-50/20 dark:from-neutral-900/95 dark:to-primary-900/30 backdrop-blur-xl border-t border-neutral-200/50 dark:border-neutral-700/50">
	<!-- Subtle background decoration -->
	<div class="absolute inset-0 pointer-events-none overflow-hidden">
		<div class="absolute top-20 left-20 w-32 h-32 bg-primary-500/5 rounded-full blur-3xl"></div>
		<div class="absolute bottom-20 right-20 w-40 h-40 bg-accent-500/5 rounded-full blur-3xl"></div>
	</div>

	<!-- Main Footer Content -->
	<div class="relative py-16">
		<div class="container mx-auto max-w-4xl px-6">
			<!-- CTA Section -->
			<div class="text-center mb-16">
				<h3 class="text-2xl sm:text-3xl font-bold text-neutral-900 dark:text-neutral-100 mb-4">
					Let's Build Something Amazing Together
				</h3>
				<p class="text-neutral-600 dark:text-neutral-400 max-w-lg mx-auto mb-8 leading-relaxed">
					Ready to transform your ideas into a high-performing web solution?
				</p>
				<EnhancedCTA 
					href="mailto:contacto@francolorenzo.dev?subject=New Project Inquiry"
					text="Get Started Today"
					variant="primary"
				/>
			</div>

			<!-- Contact & Links Grid -->
			<div class="grid md:grid-cols-3 gap-12 text-center md:text-left mb-12">
				<!-- Contact Info -->
				<div>
					<h4 class="font-semibold text-neutral-900 dark:text-neutral-100 mb-6">Get In Touch</h4>
					<div class="space-y-4">
						<a 
							href="mailto:contacto@francolorenzo.dev" 
							class="group flex items-center justify-center md:justify-start gap-3 text-neutral-600 dark:text-neutral-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-300"
						>
							<div class="w-10 h-10 bg-primary-100/80 dark:bg-primary-900/30 rounded-xl flex items-center justify-center group-hover:bg-primary-200 dark:group-hover:bg-primary-800/50 transition-colors duration-300">

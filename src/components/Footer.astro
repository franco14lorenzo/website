					<div class="space-y-3 text-neutral-600 dark:text-neutral-400">
						<div class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-300 cursor-default">Full Stack Development</div>
						<div class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-300 cursor-default">UI/UX Design</div>
						<div class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-300 cursor-default">Performance Optimization</div>
						<div class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-300 cursor-default">SEO & Analytics</div>
					</div>
				</div>

				<!-- Connect -->
				<div>

---
import { Image } from 'astro:assets'
import franco from '../assets/images/franco.webp'
import EnhancedCTA from './EnhancedCTA.astro'
---

<section class="relative flex flex-col items-start justify-center py-16 min-h-[80vh]">
	<!-- Profile Image with enhanced styling -->
	<div class="relative mx-auto mb-8">
		<div class="absolute inset-0 bg-gradient-to-br from-primary-400 to-accent-500 rounded-full blur-lg opacity-20 scale-110 animate-pulse-slow"></div>
		<Image
			src={franco}
			alt="Franco Lorenzo Profile Picture"
			class="relative h-32 w-32 overflow-hidden rounded-full border-4 border-white/20 shadow-2xl object-cover"
			width={256}
			height={256}
			loading="eager"
			quality="max"
			draggable={false}
		/>
		<!-- Status indicator -->
		<div class="absolute bottom-2 right-2 w-6 h-6 bg-success-500 border-4 border-neutral-900 rounded-full shadow-lg">
			<div class="w-full h-full bg-success-400 rounded-full animate-ping"></div>
		</div>
	</div>

	<article class="flex w-full flex-col items-center justify-center text-center space-y-6">
		<!-- Greeting with enhanced styling -->
		<div class="flex items-center gap-2 text-sm font-medium text-neutral-400 bg-neutral-800/80 px-4 py-2 rounded-full backdrop-blur-sm">
			<span class="animate-bounce">üëãüèª</span>
			<span>Available for freelance work</span>
			<div class="w-2 h-2 bg-success-500 rounded-full animate-pulse"></div>
		</div>

		<!-- Main heading with improved gradient -->
		<h1 class="mb-4 bg-gradient-to-br from-neutral-100 via-primary-300 to-accent-400 bg-clip-text text-5xl sm:text-6xl font-bold text-transparent leading-tight">
			Franco Lorenzo
		</h1>

		<!-- Enhanced subtitle -->
		<div class="space-y-2">
			<h2 class="text-2xl sm:text-3xl font-light tracking-wide text-neutral-300">
				Software Engineer & Frontend Specialist
			</h2>
			<div class="flex items-center justify-center gap-2 text-sm text-neutral-400">
				<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
					<path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
				</svg>
				<span>Argentina</span>
				<span>‚Ä¢</span>
				<span>Remote Work Available</span>
			</div>
		</div>

		<!-- Value proposition with better structure -->
		<div class="max-w-[65ch] space-y-4">
			<p class="text-lg text-neutral-300 font-medium">
				Specialized in creating <span class="text-primary-400 font-semibold">high-converting</span> web applications with modern technologies.
			</p>
			<p class="text-neutral-400 leading-relaxed">
				I help businesses build scalable products from scratch with a UX-first approach, 
				focusing on performance, accessibility, and user experience that drives results.
			</p>
		</div>

		<!-- Skills badges -->
		<div class="flex flex-wrap justify-center gap-2 max-w-lg">
			{['React', 'Next.js', 'TypeScript', 'Node.js', 'Astro', 'Tailwind CSS'].map((skill) => (
				<span class="px-3 py-1 text-xs font-medium bg-primary-900/30 text-primary-300 rounded-full border border-primary-800">
					{skill}
				</span>
			))}
		</div>

		<!-- CTA Section with hierarchy -->
		<div class="flex flex-col sm:flex-row items-center justify-center gap-4 pt-8">
			<EnhancedCTA 
				href="mailto:contacto@francolorenzo.dev"
				text="Let's Work Together"
				variant="primary"
			/>
			<EnhancedCTA 
				href="https://github.com/franco14lorenzo?tab=repositories"
				text="View Projects"
				variant="secondary"
				external={true}
				icon={true}
			/>
		</div>

		<!-- Social proof / metrics -->
		<div class="flex items-center justify-center gap-8 pt-8 text-sm text-neutral-400">
			<div class="text-center">
				<div class="font-bold text-lg text-neutral-300">20+</div>
				<div>Projects Completed</div>
			</div>
			<div class="w-px h-8 bg-neutral-600"></div>
			<div class="text-center">
				<div class="font-bold text-lg text-neutral-300">5+</div>
				<div>Years Experience</div>
			</div>
			<div class="w-px h-8 bg-neutral-600"></div>
			<div class="text-center">
				<div class="font-bold text-lg text-neutral-300">24h</div>
				<div>Response Time</div>
			</div>
		</div>
	</article>
</section>

<style>
	/* Custom animations for hero elements */
	section {
		animation: fadeInUp 1s ease-out;
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* Staggered animation for child elements */
	article > * {
		animation: fadeInUp 0.8s ease-out backwards;
	}

	article > *:nth-child(1) { animation-delay: 0.1s; }
	article > *:nth-child(2) { animation-delay: 0.2s; }
	article > *:nth-child(3) { animation-delay: 0.3s; }
	article > *:nth-child(4) { animation-delay: 0.4s; }
	article > *:nth-child(5) { animation-delay: 0.5s; }
	article > *:nth-child(6) { animation-delay: 0.6s; }
	article > *:nth-child(7) { animation-delay: 0.7s; }
</style>
